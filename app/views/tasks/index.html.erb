<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Tasks</h1>
      <p class="mt-2 text-sm text-gray-700">Here you will see the list of all tasks you have created.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to new_task_path, class: "inline-flex items-center rounded-full bg-yellow-400 p-1 text-white shadow-sm hover:bg-yellow-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-400", data: { turbo_frame: "task_modal" } do %>
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
          <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
        </svg>
      <% end %>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow-sm border-b border-gray-200">
          <table class="min-w-full">
            <thead>
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6 w-full">Tasks</th>
                <th scope="col" class="px-8 py-3.5 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">Due Date</th>
                <th scope="col" class="relative px-8 py-3.5 text-left text-sm font-semibold text-gray-900 whitespace-nowrap flex items-center">
                  Status
                  <button type="button" aria-label="Filter by status" class="ml-1 inline-flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                    </svg>
                  </button>
                </th>
                <th scope="col" class="relative py-3.5 pl-8 pr-4 sm:pr-6 w-12">
                  <span class="sr-only">Edit</span>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white">
              <% @tasks.each do |task| %>
                <tr class="border-b border-gray-200" data-task-id="<%= task.id %>" data-controller="task">
                  <td class="whitespace-nowrap py-4 ml-4 pl-4 pr-3 text-sm font-medium sm:pl-6 flex items-center">
                    <%= button_tag class: "mr-2", data: { action: "task#toggle" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg"
                          data-task-target="pendingIcon"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke-width="1"
                          stroke="#A9A9A9"
                          class="size-9 <%= 'hidden' if task.completed? %>">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                      </svg>

                      <svg xmlns="http://www.w3.org/2000/svg"
                          data-task-target="completedIcon"
                          viewBox="0 0 24 24"
                          fill="none"
                          class="size-9 <%= 'hidden' unless task.completed? %>">
                        <circle cx="12" cy="12" r="9" fill="#74D4A1"/>
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M9 12.75 11.25 15 15 9.75"
                              fill="none"
                              stroke="white"
                              stroke-width="1"/>
                      </svg>
                    <% end %>
                    <span class="ml-1 text-gray-800 hover:underline">
                      <%= task.title %>
                    </span>
                  </td>
                  <td class="whitespace-nowrap px-8 py-4 text-sm text-gray-500 text-center">
                    <% if task.due_date %>
                     <%= task.due_date.to_date == Date.today ? 'Today' : task.due_date.strftime("%m/%d") %>
                    <% else %>
                      <%= '-' %>
                    <% end %>
                  </td>
                  <td class="whitespace-nowrap px-8 py-4 text-sm text-gray-500" data-task-target="status">
                    <%= task.completed? ? 'Completed' : 'Pending' %>
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-8 pr-4 text-right text-sm font-medium sm:pr-6">
                    <a href="#" class="text-yellow-400 hover:text-yellow-700">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                      </svg>
                    </a>
                  </td>
                </tr>
              <% end %>
              <%= turbo_frame_tag "task_modal", target: "_top" %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
