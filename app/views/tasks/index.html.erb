<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold leading-6 text-gray-900">
        Hello, there!
        <span class="wave text-2xl">ðŸ‘‹</span>
      </h1>

      <div class="mt-6">
        <span class="mt-2 text-sm text-gray-700 items-center">
          Completed tasks are automatically archived after 7 days, or you can
          <%= link_to "archive them now", archive_tasks_tasks_path, data: { turbo_method: "post" }, class: "font-medium text-yellow-500 hover:text-yellow-700 underline underline-offset-2 p-0 bg-transparent border-none inline" %>
        </span>
      </div>
    </div>
   
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to new_task_path, class: "inline-flex items-center rounded-full bg-yellow-400 p-1 text-white shadow-sm hover:bg-yellow-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-400", data: { turbo_frame: "task_modal" } do %>
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
          <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
        </svg>
      <% end %>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow-sm border-b border-gray-200">
          <table class="min-w-full">
            <thead>
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6 w-full">Tasks</th>
                <th scope="col" class="px-8 py-3.5 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">Due Date</th>
                <th scope="col">
                  <div class="relative px-8 py-3.5 text-left text-sm font-semibold text-gray-900 whitespace-nowrap flex items-center">
                    Status
                    <button type="button" aria-label="Filter by status" class="ml-1 inline-flex items-center justify-center" onclick="toggleElement('filter-checkboxes')">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                      </svg>
                    </button>
                  </div>

                  <div id="filter-checkboxes" class="absolute mt-2 hidden bg-white shadow-lg rounded-md p-4 z-50">
                    <%= form_with(method: :get, local: true) do |form| %>
                      <fieldset>
                        <legend class="sr-only">Filter by status</legend>
                        <div class="space-y-4">
                          <% %w[completed pending archived].each do |status| %>
                            <div class="flex items-center">
                              <%= check_box_tag("status[]", 
                                  status, 
                                  params[:status]&.include?(status), 
                                  class: "h-4 w-4 text-indigo-600 border-gray-300 rounded cursor-pointer",
                                  id: "status-#{status}") %>
                              <%= label_tag("status-#{status}", 
                                  status.titleize, 
                                  class: "ml-3 block text-sm font-medium text-gray-700 cursor-pointer") %>
                            </div>
                          <% end %>
                        </div>
                      </fieldset>

                      <div class="mt-4 flex justify-center">
                        <%= form.submit "Apply", class: "inline-flex items-center justify-center cursor-pointer rounded-md p-1 text-gray-700 text-sm hover:bg-gray-100 transition-colors duration-150", aria: { label: "Apply filter" } %>
                      </div>
                    <% end %>
                  </div>
                </th>
                <th scope="col" class="relative py-3.5 pl-8 pr-4 sm:pr-6 w-12">
                  <span class="sr-only">Delete</span>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white">
              <% @tasks.each do |task| %>
                <tr class="border-b border-gray-200" data-task-id="<%= task.id %>" data-controller="task">
                  <td class="whitespace-nowrap py-4 ml-4 pl-4 pr-3 text-sm font-medium sm:pl-6 flex items-center">
                    <%= button_tag class: "mr-2", data: { action: "task#toggle" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg"
                          data-task-target="pendingIcon"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke-width="1"
                          stroke="#A9A9A9"
                          class="size-9 <%= 'hidden' if task.completed? %>">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                      </svg>

                      <svg xmlns="http://www.w3.org/2000/svg"
                          data-task-target="completedIcon"
                          viewBox="0 0 24 24"
                          fill="none"
                          class="size-9 <%= 'hidden' unless task.completed? %>">
                        <circle cx="12" cy="12" r="9" fill="#74D4A1"/>
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M9 12.75 11.25 15 15 9.75"
                              fill="none"
                              stroke="white"
                              stroke-width="1"/>
                      </svg>
                    <% end %>
                    <%= link_to edit_task_path(task), class: "ml-1 text-gray-800 hover:underline underline-offset-2", data: { turbo_frame: "task_modal" } do %>
                      <%= task.title %>
                    <% end %>
                  </td>
                  <td class="whitespace-nowrap px-8 py-4 text-sm text-gray-500 text-center">
                    <% if task.due_date %>
                     <%= task.due_date.to_date == Date.today ? 'Today' : task.due_date.strftime("%m/%d") %>
                    <% else %>
                      <%= '-' %>
                    <% end %>
                  </td>
                  <td class="whitespace-nowrap px-8 py-4 text-sm text-gray-500" data-task-target="status">
                    <% if task.archived? %>
                      <span class="inline-flex items-center rounded-full bg-yellow-100 px-2 py-1 text-xs font-medium text-yellow-800">Archived</span>
                    <% elsif task.completed? %>
                      <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-700">Completed</span>
                    <% else %>
                      <span class="inline-flex items-center rounded-full bg-blue-100 px-2 py-1 text-xs font-medium text-blue-700">Pending</span>
                    <% end %>
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-8 pr-4 text-right text-sm font-medium sm:pr-6">
                    <%= button_to task_path(task), method: :delete, class: "text-red-400 hover:text-red-700" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                      </svg>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <%= turbo_frame_tag "task_modal", target: "_top" %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
